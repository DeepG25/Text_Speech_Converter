<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.textvsspeech.StoTActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speech to Text"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:id="@+id/tsot"
        />

    <ImageButton
        android:id="@+id/speech_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tsot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/microphone"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/text_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speech_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:hint="Press above button to record speech" />

</RelativeLayout>
